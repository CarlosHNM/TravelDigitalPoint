@model IEnumerable<Veiculo>

@{
    ViewData["Title"] = "Index";
}


<h1>Veiculos</h1>

<p>
    <a asp-action="Create">Registrar Novo Veiculo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodVeiculo)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodVeiculo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edita</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deleta</a>
                </td>
            </tr>
        }
    </tbody>
</table>