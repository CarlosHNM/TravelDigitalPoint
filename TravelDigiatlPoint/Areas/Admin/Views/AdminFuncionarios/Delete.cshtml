@model TravelDigiatlPoint.Models.Funcionario

@using TravelDigiatlPoint.Extensions

@{
    ViewData["Title"] = "Excluir Funcionário";
}

<h2>Excluir Funcionário</h2>

<div>
    <h4>Você tem certeza que deseja excluir este funcionário?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumeroDeCracha)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NumeroDeCracha)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Pis)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Pis)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Complemento)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Complemento)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-8">
            @Model.Cargo.GetDescription()
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
    </form>
</div>
